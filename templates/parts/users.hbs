<section>
    {{#if (isAtLeastOneUserToBeShown)}}
        <ul>
            {{#each users}}
                {{#with this}}
                    <li {{#unless active}} class="offline" title="{{ localize 'LAME.UserIsOffline' }}" {{/unless}}>
                        <input type="checkbox" id="user-{{name}}" class="user-checkmark" {{#unless active}} disabled {{/unless}} />
                        <label for="user-{{name}}">
                            <img src="{{avatar}}" style="border-color: {{color}}; {{#if active}} background-color: {{color}}; {{/if}}"/><br/>
                            {{name}}
                        </label>
                    </li>
                {{/with}}
            {{/each}}
        </ul>
    {{else}}
        <div class="no-users-to-show">
            <p> {{ localize 'LAME.NoUsersToShow' }} </p>
            <p> {{ localize 'LAME.NoUsersToShowExplanation' }} </p>
        </div>
    {{/if}}
</section>
